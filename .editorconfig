# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation for java, xml and yml files
[*.{java,xml,yml,sh}]
indent_style = space
indent_size = 2
